<UserControl x:Class="Hs.Hypermint.WheelCreator.Views.WheelProcessView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:control="clr-namespace:Hs.Hypermint.WheelCreator.Controls"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <GroupBox Header="{Binding ProcessWheelInfo}">

            <StackPanel>

                <DockPanel Margin="5">
                    <Label Margin="5" Content="Wheel text preset"/>

                    <ComboBox Margin="5" ItemsSource="{Binding Presets}"/>
                    
                </DockPanel>

                <DockPanel Margin="5">
                    <RadioButton Margin="5" Content="Wheels" IsChecked="{Binding ProcessWheels,UpdateSourceTrigger=PropertyChanged}"/>
                    <RadioButton Margin="5" Content="Letters" IsChecked="{Binding ProcessLetters,UpdateSourceTrigger=PropertyChanged}"/>
                    <RadioButton Margin="5" Content="Genre" IsChecked="{Binding ProcessGenres,UpdateSourceTrigger=PropertyChanged}"/>
                    <RadioButton Margin="5" Content="Special" IsEnabled="False"/>
                </DockPanel>
                
                <control:ProcessTools/>

            </StackPanel>

        </GroupBox>
    </Grid>
</UserControl>
