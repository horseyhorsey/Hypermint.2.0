<UserControl x:Class="Hs.Hypermint.Search.Views.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"          
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <Thickness x:Key="ControlMargin">0 1</Thickness>

        <Style x:Key="CustomMetroToggleSwitchButton"
                       TargetType="{x:Type metro:ToggleSwitchButton}"
                       BasedOn="{StaticResource MetroToggleSwitchButton}">
            <Setter Property="SwitchForeground"
                            Value="YellowGreen" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="32" />
            <RowDefinition Height="150" />
            <RowDefinition Height="150" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="150" MinWidth="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Main menu" HorizontalAlignment="Center" Grid.ColumnSpan="2" FontSize="28"/>

        <ContentControl Grid.RowSpan="2" Grid.Row="2" VerticalAlignment="Stretch">
            <ListView BorderThickness="1" Margin="10" ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                  Grid.ColumnSpan="1" ItemsSource="{Binding Systems,UpdateSourceTrigger=PropertyChanged}"                   
         SelectionMode="Single">
                <ListView.ItemTemplate >
                    <DataTemplate >
                        <WrapPanel Orientation="Horizontal" MaxHeight="28">
                            <CheckBox IsChecked="{Binding Enabled}"/>
                            <Image Source="{Binding SysIcon}"></Image>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </ContentControl>

        <!--<DockPanel Grid.Row="1">
            <Button Content="None" Margin="5" 
                    Command="{Binding SelectSystemsCommand}"
                    CommandParameter="none"
                    />
            <Button Content="All"
                    Command="{Binding SelectSystemsCommand}"
                    CommandParameter="all"
                    Margin="5"/>
        </DockPanel>-->

        <DockPanel  Margin="2" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
            <TextBox x:Name="textField" VerticalAlignment="Bottom" Width="300"
                   metro:TextBoxHelper.UseFloatingWatermark="True" MaxHeight="28"
                   metro:TextBoxHelper.Watermark="Search term"/>

        <StackPanel  Orientation="Horizontal" Grid.Row="2" Grid.Column="2">
            <!--Search Button-->
            <Button Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" 
                        Command="{Binding SearchGamesCommand}"
                        CommandParameter="{Binding ElementName=textField,Path=Text}"
                    Background="Green"
                        Style="{DynamicResource MetroCircleButtonStyle}">
                <Rectangle Width="20"
                               Height="20"
                               Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                                         Visual="{DynamicResource appbar_magnify}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
            <!--Cancel Search-->
            <Button Width="30" Height="30" VerticalAlignment="Center" 
                        Command="{Binding CancelCommand}"                        
                    Background="{DynamicResource ValidationBrush5}"
                        Style="{DynamicResource MetroCircleButtonStyle}">
                <Rectangle Width="20"
                               Height="20"
                               Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill"
                                         Visual="{DynamicResource appbar_cancel}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>

        </StackPanel>

        </DockPanel>

        <ListView Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Margin="10"/>

    </Grid>
</UserControl>
