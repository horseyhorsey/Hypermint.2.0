<UserControl x:Class="Hs.Hypermint.WheelCreator.Views.SimpleWheelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:Hs.Hypermint.WheelCreator.Controls"
             mc:Ignorable="d" Width="Auto">
    <GroupBox Header="Simple wheel creator">
        <Grid>

            <StackPanel>
                <!--Font Options-->
                <DockPanel>

                    <GroupBox Header="Preview">
                        <TextBox Text="{Binding PreviewText}" MinWidth="200" ></TextBox>
                    </GroupBox>
                    <GroupBox Height="70" Width="200" HorizontalAlignment="Left" Grid.Row="1" Header="Font">
                        <Grid>
                            <StackPanel  Orientation="Horizontal">
                                <TextBox HorizontalAlignment="Left" Height="20" TextWrapping="Wrap" 
                                 Text="{Binding FontName}" VerticalAlignment="Center" Width="161"/>

                                <Button DockPanel.Dock="Left" HorizontalAlignment="Left"
                                    VerticalAlignment="Top" Margin="2" 
                                    Background="{DynamicResource AccentColorBrush}"
                                    Height="25" Width="25" 
                                    Command="{Binding SelectFontCommand}"
                                    Style="{DynamicResource AccentedSquareButtonStyle}"
                                    ToolTip="Run &quot;convert -list font &gt;fonts.txt&quot; in the Imagemagick directory if your font doesnt work to get the correct name">
                                    <Rectangle Width="13" Height="13"
                                           Fill="{Binding Path=Foreground, 
                                    RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}">
                                        <Rectangle.OpacityMask>
                                            <VisualBrush  Stretch="Uniform" Visual="{DynamicResource appbar_text_serif}"/>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Button>
                            </StackPanel>

                            <StackPanel Margin="568,10,103,20" Orientation="Horizontal">
                                <RadioButton x:Name="CaptionCheckBox" Content="Caption"
                                 ToolTip="Type of wheel text style, caption or label." HorizontalAlignment="Left" 
                                 Width="69" IsChecked="True" Height="22" VerticalAlignment="Top" RenderTransformOrigin="1.304,4.8"/>
                                <RadioButton x:Name="labelRadioButton" Content="Label" 
                                 HorizontalAlignment="Left" VerticalAlignment="Top" Width="57" Height="22"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="Wheel Type">
                        <DockPanel>
                            <RadioButton Margin="25,0" Content="Wheels" HorizontalAlignment="Left" Width="69" 
                                         ToolTip="Wheels for hyperspin" IsChecked="True" Height="26" VerticalAlignment="Center" />
                            <RadioButton Content="Letters" HorizontalAlignment="Left" 
                                         ToolTip="Letters for hyperspin" VerticalAlignment="Center" Width="77" />
                            <RadioButton Content="Genre" HorizontalAlignment="Left" ToolTip="Genres for hyperspin"
                                         VerticalAlignment="Center" Width="77"/>
                            <RadioButton Content="Special Art 3" ToolTip="Special Art for hyperspin"
                                         HorizontalAlignment="Left" VerticalAlignment="Center" Width="95" />
                        </DockPanel>
                    </GroupBox>
                </DockPanel>

                <DockPanel>
                <GroupBox Header="Background">
                        <DockPanel>
                        <toolkit:ColorPicker ShowAdvancedButton="False"
                                                 MinWidth="50" MaxWidth="50" Margin="5" 
                                                 SelectedColor="{Binding BackgroundColor, UpdateSourceTrigger=PropertyChanged}"
                                                 HorizontalAlignment="Left" VerticalAlignment="Center"  />
                        <CheckBox Content="Border" IsChecked="{Binding BorderOn}" HorizontalAlignment="Left"/>
                        <toolkit:ColorPicker ShowAdvancedButton="False"
                                                 MinWidth="50" MaxWidth="50"
                                                 SelectedColor="{Binding BorderColor,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Margin="5" 
                                                 HorizontalAlignment="Left" VerticalAlignment="Center"  />
                            <CheckBox Content="Shadow" IsChecked="{Binding BackgroundShadowOn,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left"/>
                            <toolkit:ColorPicker ShowAdvancedButton="False"
                                                 MinWidth="50" MaxWidth="50"
                                                 SelectedColor="{Binding BGShadowColor,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Margin="5" 
                                                 HorizontalAlignment="Left" VerticalAlignment="Center"  />

                        </DockPanel>
                    </GroupBox>
                <!--Top Dock Panel Process Tools-->
                <GroupBox Header="Options" Margin="5">
                    <Grid>
                        <StackPanel  Orientation="Horizontal" VerticalAlignment="Bottom">
                            
                            <Label Content="Fill" Margin="5" HorizontalAlignment="Left" Height="26" VerticalAlignment="Center"/>
                            <toolkit:ColorPicker ShowAdvancedButton="False"
                                                 MinWidth="50" MaxWidth="50"
                                                 SelectedColor="{Binding TextColor,UpdateSourceTrigger=PropertyChanged}" Margin="5" 
                                                 HorizontalAlignment="Left" VerticalAlignment="Center"  />
                            <Label Content="Stroke" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <toolkit:ColorPicker ShowAdvancedButton="False"
                                                 MinWidth="50" MaxWidth="50"
                                                 SelectedColor="{Binding TextStrokeColor,UpdateSourceTrigger=PropertyChanged}" Margin="5" 
                                                 HorizontalAlignment="Left" VerticalAlignment="Center"  />
                                <Controls:NumericUpDown Margin="5" Minimum="0" Maximum="100" Value="100"/>

                                <CheckBox Content="Shade" Margin="10" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="69"/>
                            <Controls:NumericUpDown HorizontalAlignment="Left" Margin="5" Minimum="0" Maximum="100" Value="100"/>
                            <Controls:NumericUpDown HorizontalAlignment="Left" Margin="5" Minimum="0" Maximum="100" Value="100"/>
                            <CheckBox  Content="Gravity" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" IsChecked="True"/>
                            <ComboBox  VerticalAlignment="Top" Height="20" HorizontalAlignment="Left" Margin="5" Width="75" >
                                <ComboBoxItem  Content="NorthWest"/>
                                <ComboBoxItem  Content="North"/>
                                <ComboBoxItem  Content="NorthEast"/>
                                <ComboBoxItem Content="West"/>
                                <ComboBoxItem  Content="Center"/>
                                <ComboBoxItem Content="East"/>
                                <ComboBoxItem  Content="SouthWest"/>
                                <ComboBoxItem  Content="South"/>
                                <ComboBoxItem  Content="SouthEast"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                </DockPanel>

                <Rectangle Width="20" Margin="5" Height="10" HorizontalAlignment="Left">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" >
                            <GradientStop Color="Blue" Offset="0" />
                            <GradientStop Color="Red" Offset="1.0" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                
                <local:ProcessTools Margin="5" VerticalAlignment="Bottom" ></local:ProcessTools>

                <StackPanel Orientation="Horizontal">
                    <GroupBox Header="Size" Grid.Row="3" HorizontalAlignment="Right" Width="372">
                        <StackPanel  Orientation="Horizontal">
                            <Controls:NumericUpDown HorizontalAlignment="Left" Minimum="0" Maximum="4096" Value="400"
                                            Margin="5"
                                            ToolTip="Width of output wheel. May not be exact size you specify on some parameters"/>
                            <Controls:NumericUpDown Minimum="0" Maximum="2160" Value="175" Margin="5"
                                            VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Wheel height"/>
                            <CheckBox ToolTip="Trim the final image" Content="Trim" HorizontalAlignment="Left" 
                              IsChecked="True" Height="32" VerticalAlignment="Center"/>
                            <Label Content="Arc" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto"/>
                            <Controls:NumericUpDown ToolTip="Arch the text." HorizontalAlignment="Left" Margin="5"
                                            Minimum="0" Maximum="200" Value="10" VerticalAlignment="Center"/>

                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Shadow" HorizontalAlignment="Left">
                        <StackPanel  Orientation="Horizontal">
                            <CheckBox Content="On" Margin="5" HorizontalAlignment="Left" ToolTip="Enabled shadow" VerticalAlignment="Center" IsChecked="True"/>
                            <Button  ToolTip="Shadow color" Margin="5" Width="26"  Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Black" Height="25" />
                            <Controls:NumericUpDown  ToolTip="Shadow amount" Margin="5" HorizontalAlignment="Left"  Minimum="0" Maximum="100" Value="100"/>
                            <Label Content="Distance"  HorizontalAlignment="Left"  VerticalAlignment="Center"/>
                            <Controls:NumericUpDown   ToolTip="Shadow distance" Margin="5" HorizontalAlignment="Left"  Minimum="0" Maximum="199" Value="1"/>
                            <CheckBox  Content="Swap" ToolTip="Swap the shadow" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Center" IsChecked="True"/>
                            <CheckBox Content="Repage" ToolTip="Repage shadow" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Center" IsChecked="True"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

                <GroupBox Header="Presets" Grid.Row="4" Grid.RowSpan="2">
                    <StackPanel>
                        <DockPanel >
                            <TextBox x:Name="presetTextBox" Margin="5,0,0,0" HorizontalAlignment="Left" Height="26" TextWrapping="Wrap" Text="Preset" VerticalAlignment="Center" Width="214"/>
                            <Button x:Name="savePreset" Content="Save" VerticalAlignment="Center" HorizontalAlignment="Left" Width="40" Height="25" Margin="10,0,0,0" ToolTip="Save Preset" />
                            <Button x:Name="delPreset" Content="Del" VerticalAlignment="Center" HorizontalAlignment="Left" Width="32" Height="25" Margin="10,0,0,0" ToolTip="Delete Selected Preset"/>
                        </DockPanel>
                    </StackPanel>
                </GroupBox>
                
                <ListBox x:Name="presetListBox" Margin="10,58,10,10"  />
            </StackPanel>
        </Grid>
    </GroupBox>
</UserControl>
