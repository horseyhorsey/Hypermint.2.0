<UserControl x:Class="Hs.Hypermint.NavBar.Views.NavBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:prism="http://prismlibrary.com/"
             xmlns:local="clr-namespace:Hs.Hypermint.NavBar.Views"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d">

    <metro:WindowCommands>
        
        <!--Database Editor View Btton-->
        <Button Command="{Binding NavigateCommand}" CommandParameter="DatabaseDetailsView"
                ToolTip="Database Editor">
        <Rectangle Width="20" Height="20" 
                   Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Uniform" Visual="{DynamicResource appbar_social_stackoverflow}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <!--MultiSystem-->
        <Button Command="{Binding NavigateCommand}" CommandParameter="MultiSystemView"
                ToolTip="Multi system">
            <Rectangle Width="20" Height="20" 
                   Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Uniform" Visual="{DynamicResource appbar_source_fork}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>
        
        <!--Hyper Audits-->
        <Button Command="{Binding NavigateCommand}" CommandParameter="HsMediaAuditView"
                ToolTip="Hyperspin audit">
            <Rectangle Width="20" Height="20" 
                   Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Uniform" Visual="{DynamicResource appbar_list_gear}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <!--Rocketlaunch audits-->
        <Button Command="{Binding NavigateCommand}" CommandParameter="RlMediaAuditView"
                ToolTip="Rocketlaunch audit">
            <Rectangle Width="20" Height="20" 
                   Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Uniform" Visual="{DynamicResource appbar_list_gear}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <!--Wheel Creator-->
        <Button Command="{Binding NavigateCommand}" CommandParameter="SimpleWheelView"
                ToolTip="Simple wheel">
            <Rectangle Width="20" Height="20" 
                   Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Uniform" Visual="{DynamicResource appbar_bike}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <!--System Intros-->
        <Button Command="{Binding NavigateCommand}" CommandParameter="IntroVideosView"
                ToolTip="System intros">
            <Rectangle Width="20" Height="20" 
                   Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Uniform" Visual="{DynamicResource appbar_movie_clapper}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <!--Search-->
        <Button ToolTip="Web Search">
            <Rectangle Width="20" Height="20" 
                   Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Uniform" Visual="{DynamicResource appbar_browser}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <!--Rocketlaunch Stats-->
        <Button ToolTip="RocketLaunch Stats">
            <Rectangle Width="20" Height="20" 
                   Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type Button}}}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Uniform" Visual="{DynamicResource appbar_leaderboard}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <!--<local:FilterControl Margin="25,0" ></local:FilterControl>-->
    </metro:WindowCommands>


</UserControl>
