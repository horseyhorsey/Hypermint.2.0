<UserControl x:Class="Hs.Hypermint.DatabaseDetails.Controls.FilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"   
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <GroupBox Header="Games Filter">
    <DockPanel>
        <TextBox metro:TextBoxHelper.ClearTextButton="True"                        
                       metro:TextBoxHelper.Watermark="Filter games"
                       Width="200"
                       Height="25"
                 Text="{Binding FilterText}"/>
        <CheckBox Margin="5" Content="Clones" IsChecked="{Binding ShowClones}"></CheckBox>
    </DockPanel>
    </GroupBox>
</UserControl>
