<Grid x:Class="Hs.Hypermint.SidebarSystems.SidebarSystemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                     xmlns:prism="http://prismlibrary.com/"      
            prism:ViewModelLocator.AutoWireViewModel="True"  
      VerticalAlignment="Top"
             mc:Ignorable="d">

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"></RowDefinition>
        <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0">
        <!--<Image  Source="Resources/sysLogo.png"></Image>-->
        <GroupBox Header="{Binding MainMenuDataBaseCount}">
            <ComboBox ItemsSource="{Binding MainMenuDatabases}" 
                          SelectedItem="{Binding SelectedMainMenu}"></ComboBox>
        </GroupBox>
        <GroupBox Header="Filter">
            <TextBox Text="{Binding SystemTextFilter,UpdateSourceTrigger=PropertyChanged}"
                 metro:TextBoxHelper.ClearTextButton="True" 
                     metro:TextBoxHelper.Watermark="System Name"></TextBox>
        </GroupBox>
    </StackPanel>

    <GroupBox Header="Systems" Grid.Row="1">
        <ContentControl  Background="{DynamicResource AccentColorBrush}"
                        prism:RegionManager.RegionName ="SystemsRegion" />
    </GroupBox>

</Grid>



