<UserControl x:Class="Hs.Hypermint.WheelCreator.Views.SimpleWheelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:patterns="clr-namespace:Hs.Hypermint.WheelCreator"             
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             prism:ViewModelLocator.AutoWireViewModel="True"             
             xmlns:local="clr-namespace:Hs.Hypermint.WheelCreator.Controls"
             xmlns:views="clr-namespace:Hs.Hypermint.WheelCreator.Views"
             mc:Ignorable="d" Width="Auto">

    <GroupBox Header="Simple wheel creator">
        <Grid>
            <Image Grid.Column="1" Stretch="Uniform"
                                   Source="{Binding GenerateWheelSource}"/>
        </Grid>
    </GroupBox>
</UserControl>
